/*--------------------------------------------------------------------
*
* SPLASH PAGE
*
--------------------------------------------------------------------*/

.splash

  .container, .callout
    max-width: 820px
    margin: 0 auto 70px
    padding: 0 20px

  //- Introduction section

  .intro
    max-width: 700px

  //- Callout sections

  .callout
    text-align: center

    h2, p
      max-width: 450px
      margin-left: auto
      margin-right: auto

    h2
      margin-bottom: 35px
      span
        font-weight: $font-weight-semibold
        display: block

  //- JS for Teams section

  .logo-jsforteams
    width: 110px
    height: 100px
    margin: 30px auto 30px
    text-indent: -9999em
    background-size: 110px 100px

  .humanjs-monster
    max-width: 200px
    margin: 0 auto

  //- Human JavaScript section

  .humanjs-ipad
    max-width: 150px

  .logo-humanjs
    width: 350px
    height: 65px
    margin: 30px auto 0
    text-indent: -9999em
    background-size: contain
    background-position: center center

  //- List of featured modules

  .modules-list
    .module-card
      float: left
      min-height: 150px
      width: 32%
      &:not(:last-child)
        margin-right: 2%
      p
        max-width: 100%
        margin-left: 0
        margin-right: 0

  //- List of users & companies using Ampersand.js


  .callout.community
    max-width: 960px

  .users-list
    padding-bottom: 20px

    .logo
      height: 40px
      margin: 20px 30px
      display: inline-block
      vertical-align: middle
      img
        height: 100%
      &.andyet
        text-indent: -9999em
        background-size: auto 40px
      &.logo-talky
        width: 65px
      &.logo-otalk
        width: 100px
      &.tall
        height: 60px
      &:hover
        opacity: .6
      //- Adjusting margin between logos
      @media (max-width: 768px)
        margin: 20px
      //- For small screens
      @media (max-width: 540px)
        height: 20px
        margin: 15px 10px
        &.andyet
          background-size: auto 20px
        &.logo-talky
          width: 33px
        &.logo-otalk
          width: 50px
        &.tall
          height: 30px

  //- Consulting section

  .logo-andyet
    width: 270px
    height: 50px
    margin: 30px auto
    text-indent: -9999em
    background-size: contain
    background-position: center center

@media (max-width: 700px)

  .splash

    .logo-humanjs
      width: 280px
      height: 52px

    .modules-list
      .module-card
        float: none
        width: 100%
        min-height: 0
        &:not(:last-child)
          margin-right: 0

    .projects-list

      .project
        width: 100%
        margin-bottom: 30px
        padding: 0 10px
        float: none
