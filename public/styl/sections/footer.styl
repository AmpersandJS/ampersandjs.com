.footer-main
  padding: 40px 20px
  border-top: 1px solid $border-color
  font-family: $font-family-gotham-round
  font-size: $font-size-smaller
  text-align: center
  color: $gray

  .nav-footer
    max-width: 500px
    margin: 0 auto

    div
      width: 33.33%
      padding: 0 5px
      float: left

  .nav-item
    margin-bottom: 3px
    display: block

  .logo-ampersand-gray
    width: 17px
    height: 20px
    margin-top: 10px
    display: inline-block
    text-indent: -9999em
    background-size: 17px auto